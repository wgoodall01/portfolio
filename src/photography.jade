---
title: Photography
flickr:
    set_id: "72157667632529635"
    extras: "url_o, url_c, description, o_dims"
---

extends ../layouts/page

append scripts
	script(src="https://code.jquery.com/jquery-2.2.4.min.js")
	script(src="/js/photography.js")

append styles
	link(rel="stylesheet", href="/css/photography.css")


block title
	span Photography

block heading
	p This is a heading!

block contents
	.gallery-container
		.column-container
			each photo in flickr_photos.photo
				- var photoUrl = "//www.flickr.com/photos/"+ flickr_photos.ownername + "/" + photo.id
				img.picture.img-fluid(src=photo.url_c data-original-size=photo.url_o
										 width=photo.width_o height=photo.height_o)


	.lightbox-container(style="display:none;")
		.lightbox-exit!= "&times;"
		img.lightbox-photo
